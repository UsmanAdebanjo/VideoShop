@model IEnumerable<VideoShop.Models.Movie>

<p>
    @Html.ActionLink("New Movie", "MovieForm","", new {@class="btn btn-primary" })
</p>
<table  id="movies" class=" table table-bordered table-hover">
    <thead>

        <tr>
            <th> Name</th>
            <th>Genre</th>
            <th>Delete</th>
        </tr>
    </thead>


<tbody>

</tbody>


</table>

@section scripts{
    
    <script>
        var table = $(document).ready(function () {
            $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc:""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return "<a href='/movies/edit/"+movie.Id+"'>"+data+"</a>"
                        }
                    },
                    {
                        data:"genre.name"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='js-delete btn-link' data-movie-id='"+data+"'>Delete</button>"
                        }
                    }

                ]

            });

            $("movies").on("click", ".js-delete", function () {
             var button = $(this);

            bootbox.confirm("Are you sure you want to  delete this movie?", function (result) {
                if (result) {
                    $.ajax({
                        url: "/api/movies/" + button.attr("data-movie-id"),
                        dataSrc: "",
                        method: "DELETE",
                        success: function () {
                            table.row(button.parents("tr")).remove().draw();
                        }

                    })
                }


            })


            })

           
        })
    </script>
    }